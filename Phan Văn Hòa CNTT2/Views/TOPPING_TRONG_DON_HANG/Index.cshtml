@model IEnumerable<Phan_Văn_Hòa_CNTT2.Models.TOPPING_TRONG_DON_HANG>

@{
    ViewBag.Title = "Index";
}

<h2 class="QTV3">Topping trong đơn hàng</h2>

<p class="QTV3">
    @Html.ActionLink("Thêm Mới", "Create")
</p>
<table class="table1">
    <tr>
        <th>
            <p>Tên Topping</p>
        </th>
        <th>
            <p>Số Lượng Topping</p>
        </th>
        <th>
            <p>Mã Chi Tiết Đơn Hàng</p>
        </th>

        <th><p>Chức Năng</p></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="QTV2">
            @Html.DisplayFor(modelItem => item.TOPPING.TEN_TOPPING)
        </td>
        <td class="QTV2">
            @Html.DisplayFor(modelItem => item.SO_LUONG_TOPPING)
        </td>
        <td class="QTV2">
            @Html.DisplayFor(modelItem => item.CHI_TIET_DON_HANG.MA_CHI_TIET_DON_HANG)
        </td>

        <td class="QTV1">
            @Html.ActionLink("Xem", "Details", new { id = item.MA_TOPPING }, new { @class = "btn-custom btn-view" }) |
            @Html.ActionLink("Sửa", "Edit", new { id = item.MA_TOPPING }, new { @class = "btn-custom btn-edit" }) |
            @Html.ActionLink("Xóa", "Delete", new { id = item.MA_TOPPING }, new { @class = "btn-custom btn-delete" })
        </td>
    </tr>
}

</table>
