@model Phan_Văn_Hòa_CNTT2.Models.TOPPING_TRONG_DON_HANG

@{
    ViewBag.Title = "Edit";
}
<h2></h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="QTV4">
        <h4>Thêm Topping Trong Đơn Hàng</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <p class="control-label1">Tên Topping</p>
            <div class="col-md-10">
                @Html.DropDownList("MA_TOPPING", null, htmlAttributes: new { @class = "form-control1" })
                @Html.ValidationMessageFor(model => model.MA_TOPPING, "", new { @class = "text-danger1" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label1">Số Lượng Topping</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SO_LUONG_TOPPING, new { htmlAttributes = new { @class = "form-control1" } })
                @Html.ValidationMessageFor(model => model.SO_LUONG_TOPPING, "", new { @class = "text-danger1" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label1">Mã Chi Tiết Topping</p>
            <div class="col-md-10">
                @Html.DropDownList("MA_CHI_TIET_DON_HANG", null, htmlAttributes: new { @class = "form-control1" })
                @Html.ValidationMessageFor(model => model.MA_CHI_TIET_DON_HANG, "", new { @class = "text-danger1" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sửa" class="btn btn-default" />
                @Html.ActionLink("Quay lại", "Index", "Home", new { @class = "btn btn-success" })
            </div>
        </div>
    </div>
}